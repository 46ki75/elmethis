{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["../../node_modules/@types"],
    "paths": {
      "@elmethis/core": ["../core/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
